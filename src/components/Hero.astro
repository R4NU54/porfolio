---
import Badge from './Badge.astro';
import type { IHeroProps } from '@/types';

const { name, about, id } = Astro.props as IHeroProps;
---

<section
  id={id}
  class='my-20 flex scroll-mt-64 flex-col sm:scroll-mt-36'>
  <img
    class='mb-2 size-20 rounded-full'
    src='assets/images/profile.webp'
    alt='Profile picture'
  />
  <h2>Hey, soy</h2>
  <section class='flex gap-6'>
    <h1 class='my-6'>{name}</h1>
    <a
      href='https://www.linkedin.com/in/raulnunezsantiago/'
      target='_blank'
      rel='noopener'
      class='flex items-center justify-center transition duration-300 hover:scale-105'>
      <Badge>Open to work</Badge>
    </a>
  </section>
  <p>
    {about}
  </p>
</section>
