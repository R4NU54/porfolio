---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div class='absolute size-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700'>
</div>
<time class='mb-1 text-sm font-normal leading-none text-sky-200/80'>{date}</time>
<h3 class='mt-2 font-semibold text-yellow-200 text-md'>
  {title}
</h3>
<p class='mb-4 text-base font-normal dark:text-gray-200 text-pretty'>
  {description}
</p>
{
  link && (
    <a
      href={link}
      class='inline-flex items-center justify-center px-2 py-1 text-xs transition border border-gray-300 rounded-full bg-white/5 dark:border-white/10 gap-x-2 md:py-2 md:px-4 md:text-base hover:scale-110 hover:bg-white/10'>
      Saber m√°s...{' '}
      <svg
        class='w-3 h-3 ms-2 rtl:rotate-180'
        aria-hidden='true'
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 14 10'>
        <path
          stroke='currentColor'
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M1 5h12m0 0L9 1m4 4L9 9'
        />
      </svg>
    </a>
  )
}
