---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a
  class='flex items-center justify-center px-2 py-1 text-xs transition border border-gray-400 rounded-full gap-x-1 bg-white/10 dark:border-white/10 md:py-1 md:px-3 md:text-base dark:text-white/50 hover:scale-110 hover:bg-white/50'
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  ><slot />{title}</a
>
